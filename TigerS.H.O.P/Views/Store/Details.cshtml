@model TigerS.H.O.P.Models.Product

@{
    ViewData["Titel"] = "Details";


}

<h1>Details</h1>

<div class="row">
    <div class="col-5">
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Size)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Size)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-warning"><i class="fa-sharp fa-solid fa-arrow-left"></i>Back</a>
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary store-btn float-end mr-5">Add to cart<i class="fa-solid fa-cart-shopping"></i></a>

        </div>

    </div>
    <div class="col-4">
        <img src ="@Model.ProductImage" class="w-100" />
    </div>
</div>