@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <title>@ViewData["Title"]</title>

    <style>
        .custom-carousel .carousel-item img {
            object-fit: cover;
            height: 300px; 
        }
    </style>

</head>
<body>


    <div class="text-center">
        <h1 class="display fw-bolder">Tiger S.H.O.P</h1>

    </div>
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div id="carouselExample" class="carousel slide custom-carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/lib/images/tiger1.jpg" class="d-block w-100 img-fluid custom-img" alt="bild1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/lib/Images/tiger2.jpg" class="d-block w-100 img-fluid custom-img" alt="bild2">
                        </div>
                        <div class="carousel-item">
                            <img src="~/lib/Images/tiger5.jpg" class="d-block w-100 img-fluid custom-img" alt="bild3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted fw-bolder" style="position: absolute; bottom: 0;">
        <div class="container">
            &copy; 2023 - TigerS.H.O.P <a asp-area="" asp-controller="Home" asp-action="Index"></a>
        </div>
    </footer>
</body>
</html>
